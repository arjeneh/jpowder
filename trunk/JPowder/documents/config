### traditional makefiles
Makefile* = svn:mine-type=text/plain;svn:eol-style=native
*makefile = svn:mine-type=text/plain;svn:eol-style=native


### various additional text-files in use
*.txt     = svn:mine-type=text/plain;svn:eol-style=native
*README   = svn:mine-type=text/plain;svn:eol-style=native

### (have specified this one to be binary to be safe)
*.pdf     = svn:mine-type=application/pdf

### svn config file
config    = svn:mine-type=text/svn;svn:eol-style=native

###  extra for JPowder project
*.class   = svn:mine-type=application/java
*.jar     = svn:mine-type=application/java
*.war     = svn:mine-type=application/java
*.zip     = svn:mine-type=application/library
*.PROPERTIES = svn:mine-type=text/plain;svn:eol-style=native
*.xye     = svn:mine-type=text/plain;svn:eol-style=native